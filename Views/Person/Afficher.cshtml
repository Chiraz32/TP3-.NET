@{
    Layout = null;
}@model tp3.Models.Person

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @{
        
        if (Model.Id == 0)
        {

            <div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">
                <h1>
                    Cet ID est
                    invalide
                </h1>
                
            </div>
        }
        else
        {
            <div class="card" style="width: 18rem; justify-content: space-evenly; align-items: center; ">
                <div class="card-body">
                    <h5 class="card-title">   @Model.FirstName   @Model.LastName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Email</h6>
                    <p class="card-text">  @Model.FirstName   @Model.LastName</p>
                    <a href="#" class="card-link"> @Model.Country </a>
                    <br />
                    <img src= @Model.Image alt= @Model.FirstName @Model.LastName >
                </div>
            </div>
            }
        }
    </body>
</html>
